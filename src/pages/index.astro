---
import Navigation from "../components/navigation.vue";
import Carousel from "../components/carousel.vue";
import "../../public/styles/index.css";
import ProjectGallerySample from "../components/projectGallerySample.vue";
import { richTextParser } from "../js/richTextParser";
import ContactForm from "../components/contactForm.vue";
import "../../public/styles/generalStyles.css";

async function getTitles() {
  try {
    const response = await fetch(
      "https://mws-data-280b2464bf34.herokuapp.com/api/home-page"
    );
    const { data } = await response.json();
    return data.attributes;
  } catch (error) {
    console.error("Error fetching data:", error);
    return {};
  }
}

var generalData = await getTitles().then((data) => {
  const titles = {
    title1: data.mainDescriptionTitle,
    title2: data.aboutMeDescriptionTitle,
  };

  return titles;
});

const response = await fetch(
  "https://mws-data-280b2464bf34.herokuapp.com/api/home-page"
);

const { data } = await response.json();
---

<html lang="he">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" type="image/svg+xml" href="/images/Favicon-new.svg" />
    <title>MWS Studio</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@900&family=Assistant:wght@200;300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <script src="../js/generalScripts.js"></script>
    <title>MWS Design</title>
  </head>
  <body>
    <main>
      <div class="loading-screen">
        <img src="../../public/images/Loading.gif" alt="Loading gif" />
      </div>
      <div class="web-template">
        <div class="navbars">
          <Navigation client:load />
        </div>

        <div class="carousel">
          <Carousel client:load />
          <div class="start-arrow">
            <div>
              <p>כיף שבאתם</p>
              <p>בואו נצא לדרך</p>
            </div>
            <div>
              <img src="/images/Arrow Down.gif" alt="arrow pointing down" />
            </div>
          </div>
        </div>

        <div class="welcome">
          <div class="text-col">
            <pre>
              <h1>{generalData.title1}</h1>
              <p set:html={richTextParser.convertToMarkdown(data.attributes.mainDescription)} />
              <button class="default-button" onclick="location.href='/contact'">צרו קשר</button>
            </pre>
          </div>
          <div class="image-col">
            <img src="/images/כפר הס-41.jpg" alt="arrow pointing down" />
          </div>
        </div>

        <div class="about">
          <div class="text-col">
            <pre>
              <h1>{generalData.title2}</h1>
              <p set:html={richTextParser.convertToMarkdown(data.attributes.aboutMeDescription)} />
              <button class="default-button" onclick="location.href='/about'">קראו עוד עלי</button>
            </pre>
          </div>
          <div class="image-col">
            <img src="/images/כפר הס-41.jpg" alt="arrow pointing down" />
          </div>
        </div>

        <div class="services">
          <h1>תוכניות הליווי שלי</h1>
          <div class="service-option-menu">
            <div class="service-option">
              <img src="/images/כפר הס-41.jpg" />
              <p>תוכנית ליווי 1</p>
            </div>
            <div class="service-option">
              <img src="/images/כפר הס-41.jpg" />
              <p>תוכנית ליווי 2</p>
            </div>
            <div class="service-option">
              <img src="/images/כפר הס-41.jpg" />
              <p>תוכנית ליווי 3</p>
            </div>
          </div>
        </div>

        <div class="projects">
          <h1 style="text-align: center;">פרויקטים נבחרים</h1>
          <ProjectGallerySample client:load />
        </div>

        <div class="contact">
          <ContactForm client:load />
        </div>

        <div class="footer">
          <p>054-4568784</p>
          <p>Karin Pitlik - Web Development</p>
        </div>
      </div>
    </main>
  </body>

  <script>
    const startArrow = document.querySelector(".start-arrow");

    document.addEventListener("DOMContentLoaded", () => {
      const startArrow = document.querySelector(".start-arrow");
      if (startArrow) {
        startArrow.addEventListener("click", function () {
          scrollToSection(".welcome");
        });
      }

      function scrollToSection(className) {
        const toDiv = document.querySelector(className);
        if (toDiv) {
          toDiv.scrollIntoView({ behavior: "smooth" });
        }
      }
    });
  </script>
</html>
