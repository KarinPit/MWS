---
import Navigation from "../components/navigation.vue";
import Carousel from "../components/carousel.vue";
import ProjectGallerySample from "../components/projectGallerySample.vue";
import ContactForm from "../components/contactForm.vue";
import LoadingPage from "../html/loadingPage.astro";
import { richTextParser } from "../js/richTextParser";
import "../../public/styles/index.css";
import "../../public/styles/generalStyles.css";

async function getTitles() {
  try {
    const response = await fetch(
      "https://mws-data-280b2464bf34.herokuapp.com/api/home-page"
    );
    const { data } = await response.json();
    return data.attributes;
  } catch (error) {
    console.error("Error fetching data:", error);
    return {};
  }
}

async function fetchData() {
  const response = await fetch(
    "https://mws-data-280b2464bf34.herokuapp.com/api/home-page"
  );
  const { data } = await response.json();
  return data;
}

async function loadData() {
  try {
    const generalData = await fetchData();
    const data = await getTitles();
    const titles = {
      title1: generalData.attributes.mainDescriptionTitle,
      title2: generalData.attributes.aboutMeDescriptionTitle,
    };
    await Promise.all([generalData, data]);
    const res = { titles: titles, data: data };
    return res;
  } catch (error) {
    console.error("Error:", error);
  }
}

var res = null;
res = await loadData();
---

<html lang="he">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" type="image/svg+xml" href="/images/Favicon-new.svg" />
    <title>MWS Studio</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@900&family=Assistant:wght@200;300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <script src="../js/generalScripts.js"></script>
    <title>MWS Design</title>
  </head>
  <body>
    <main>
      <LoadingPage />
      <div class="web-template">
        <div class="navbars">
          <Navigation client:load />
        </div>

        <div class="carousel">
          <Carousel client:load />
          <div class="start-arrow">
            <div>
              <p>כיף שבאתם</p>
              <p>בואו נצא לדרך</p>
            </div>
            <div>
              <img src="/images/Arrow Down.gif" alt="arrow pointing down" />
            </div>
          </div>
        </div>

        <div class="welcome">
          <div class="text-col">
            <pre>
              <h1>{res.titles.title1}</h1>
              <p set:html={richTextParser.convertToMarkdown(res.data.mainDescription)} />
              <button class="default-button" onclick="location.href='/contact'">צרו קשר</button>
            </pre>
          </div>
          <div class="image-col">
            <img src="/images/כפר הס-41.jpg" alt="arrow pointing down" />
          </div>
        </div>

        <div class="about">
          <div class="text-col">
            <pre>
              <h1>{res.titles.title2}</h1>
              <p set:html={richTextParser.convertToMarkdown(res.data.aboutMeDescription)} />
              <button class="default-button" onclick="location.href='/about'">קראו עוד עלי</button>
            </pre>
          </div>
          <div class="image-col">
            <img src="/images/כפר הס-41.jpg" alt="arrow pointing down" />
          </div>
        </div>

        <div class="services">
          <h1>תוכניות הליווי שלי</h1>
          <div class="service-option-menu">
            <div class="service-option">
              <img src="/images/כפר הס-41.jpg" />
              <p>תוכנית ליווי 1</p>
            </div>
            <div class="service-option">
              <img src="/images/כפר הס-41.jpg" />
              <p>תוכנית ליווי 2</p>
            </div>
            <div class="service-option">
              <img src="/images/כפר הס-41.jpg" />
              <p>תוכנית ליווי 3</p>
            </div>
          </div>
        </div>

        <div class="projects">
          <h1 style="text-align: center;">פרויקטים נבחרים</h1>
          <ProjectGallerySample client:load />
        </div>

        <div class="contact">
          <ContactForm client:load />
        </div>

        <div class="footer">
          <p>054-4568784</p>
          <p>Karin Pitlik - Web Development</p>
        </div>
      </div>
    </main>
  </body>
  <script define:vars={{ res }}>
    if (res) {
      window.addEventListener("load", () => {
        setTimeout(() => {
          const loadingScreen = document.querySelector(".loading-screen");
          if (loadingScreen) {
            loadingScreen.style.opacity = 0;
            loadingScreen.addEventListener(
              "transitionend",
              () => {
                loadingScreen.style.display = "none";
              },
              { once: true }
            );
          }
        }, 2500);
      });
    }
  </script>
</html>
