---

<html lang="he">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" type="image/svg+xml" href="/images/Favicon-new.svg" />
    <title>MWS Studio</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@900&family=Assistant:wght@200;300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <script
      async
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqYsdKnuV6P-nsHHAJeBNM7jyDABbvbug&callback=initGoogleMap"
    ></script>
    <title>MWS Design</title>
  </head>
  <body>
    <main>
      <div class="web-template">
        <div class="navbars">
          <Navigation client:load />
        </div>

        <div class="main">
          <div id="map-div"></div>
          <div class="contact-page">
            <ContactFormPage client:load />
          </div>
        </div>

        <div class="footer">
          <p>054-4568784</p>
          <p>Karin Pitlik - Web Development</p>
        </div>
      </div>
    </main>
  </body>
</html>

<script>
  const navbar = document.querySelector(".navbars");
  const logoIcon = document.querySelector(".logo-icon p");
  const startArrow = document.querySelector(".start-arrow");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      navbar.style.background = "white";
      logoIcon.style.color = "#A0BBC7";
      startArrow.style.opacity = 0;
    } else {
      navbar.style.background = "transparent";
      logoIcon.style.color = "black";
      startArrow.style.opacity = 1;
    }
  });

  function scrollToSection(className) {
    const toDiv = document.querySelector(className);
    if (toDiv) {
      toDiv.scrollIntoView({ behavior: "smooth" });
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    initGoogleMap();
  });

  function initGoogleMap() {
    var mapDiv = document.getElementById("map-div");
    if (!mapDiv) return;

    var mapOptions = {
      center: { lat: 32.2970147571538, lng: 34.914017604840296 },
      zoom: 15,
    };

    var map = new google.maps.Map(mapDiv, mapOptions);
  }
</script>
