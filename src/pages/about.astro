---
import Navigation from "../components/navigation.vue";
import ContactForm from "../components/contactForm.vue";
import ProjectGallerySample from "../components/projectGallerySample.vue";
import Stages from "../components/stages.vue";
import "bootstrap/dist/css/bootstrap.css";
import "../../public/styles/navbar.css";
import "../../public/styles/about.css";
import Footer from "../components/footer.vue";
// import "../../public/styles/contactForm.css";
import "../../public/styles/mainButtonColor.css";

const imageResponse = await fetch(
    "https://mws-data-280b2464bf34.herokuapp.com/api/about-me?populate=*"
);
const stageResponse = await fetch(
    "https://mws-data-280b2464bf34.herokuapp.com/api/about-stages"
);
const data1 = await imageResponse.json();
const data2 = await stageResponse.json();
---

<html lang="he">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="icon" type="image/svg+xml" href="/images/Favicon-new.svg" />
        <title>MWS Studio</title>
        <link
            href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@900&family=Assistant:wght@200;300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />
        <title>MWS Design</title>
    </head>
    <body>
        <header>
            <Navigation client:load />
        </header>
        <main>
            <div class="row top-row">
                <div class="main-about">
                    <img
                        id="public-photo"
                        src={data1.data.attributes.image.data.attributes.url}
                        alt="designed rooms examples"
                    />
                    <div class="about-box">
                        <p class="about-info index-p">
                            <span id="about-span">היי, נעים מאוד</span>
                            {data1.data.attributes.description}
                        </p>
                        <a href="/contact" class="white-btn body-btn mainBackground"
                            >צרו קשר</a
                        >
                    </div>
                </div>
            </div>
            <div class="row beige-background text-col">
                <div class="about-p">
                    <h2>איך זה עובד?</h2>
                    <Stages client:load />
                </div>
            </div>
            <div class="row text-center my-auto p-5">
                <h2>פרויקטים נבחרים</h2>
                <ProjectGallerySample client:load />
            </div>
        </main>
        <!-- <ContactForm client:load /> -->
    </body>
    <Footer client:load />
</html>

<script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
    integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
    crossorigin="anonymous"></script>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
    integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
    crossorigin="anonymous"></script>
<script></script>
